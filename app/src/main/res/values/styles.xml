<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor"> @color/colorPrimary</item>
    </style>

    <style name="Logo" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
    </style>

    <style name="Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor"> @color/white</item>
        <item name="layout_constraintVertical_bias">0.15</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="SubTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor"> @color/white</item>
        <item name="layout_constraintVertical_bias">0.15</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="Separator" parent="Theme.MaterialComponents">
        <item name="android:layout_width"> 195dp </item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background"> @color/pink</item>
    </style>

    <style name="Text" parent="Theme.MaterialComponents">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:layout_centerHorizontal"> true </item>
        <item name="android:layout_marginStart"> 8dp </item>
        <item name="android:layout_marginTop"> 36dp </item>
        <item name="android:textColor"> @color/white </item>
        <item name="android:textSize"> 17sp </item>
    </style>

    <style name="TextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="boxBackgroundColor">@color/background_textbox</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="backgroundTint">@color/btn_color</item>
        <item name="textAllCaps"> true </item>
        <item name="textAppearanceButton">@color/txt_color</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="RankingItemText" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>